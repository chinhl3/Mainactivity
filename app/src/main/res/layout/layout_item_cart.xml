<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white"

    android:layout_marginBottom="20dp">
<ImageView
    android:id="@+id/image_sp"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:src="@drawable/baseline_home_24"
    android:layout_marginRight="10dp"
    android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/name_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Running Shoes"
        android:layout_toRightOf="@+id/image_sp"
        android:textSize="18dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/sl_kho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kho:"
        android:layout_alignParentRight="true"
        android:textSize="18dp"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/size_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size 9"
        android:layout_below="@id/name_sp"
        android:layout_toRightOf="@+id/image_sp"
android:textSize="15dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/image_sp"
        android:layout_below="@+id/size_sp"
        android:gravity="center"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QTY: "/>
            <ImageButton
                android:id="@+id/cong"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/baseline_add_24"
                />
        <TextView
            android:id="@+id/so_luong_mua"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="1"
            android:gravity="center"
            android:background="@color/white"
            />
        <ImageButton
            android:id="@+id/tru"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/baseline_horizontal_rule_24"
            />
        <ImageButton
            android:id="@+id/xoa_sp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_restore_from_trash_24"/>


    </LinearLayout>

    <TextView
        android:id="@+id/gia_sp_gio_hang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$89.99"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/name_sp"
        android:textSize="17dp"/>

</RelativeLayout>