<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/hinh_dialog"
            android:layout_width="150sp"
            android:layout_height="140sp"
            android:src="@drawable/logo"
            />
        <TextView
            android:id="@+id/gia_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$99"
            android:textSize="34dp"
            android:layout_above="@+id/a1"
            android:layout_toRightOf="@+id/hinh_dialog"
            android:textColor="@color/black"

            />
        <TextView
            android:id="@+id/a1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kho: "
            android:textSize="24dp"
            android:layout_toRightOf="@+id/hinh_dialog"
            android:layout_alignBottom="@+id/hinh_dialog"
            />
        <TextView
            android:id="@+id/so_luong_kho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="24dp"
            android:layout_toRightOf="@+id/a1"
            android:layout_alignBottom="@+id/hinh_dialog"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mô tả:"
        android:textSize="24dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/mo_ta_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="dfasdkfasdfkjafajfadufahdfuafádasádddddddddddddddddddddddddddddasdáddddddddddddddddddddddddddddasdasdasdasddddáddddddddddddddddd"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIZE:"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <RadioGroup
        android:id="@+id/chon_co"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <RadioButton
            android:id="@+id/co_1"
            android:layout_width="30sp"
            android:layout_height="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40"
            android:textSize="24dp"
            />

        <RadioButton
            android:id="@+id/co_2"
            android:layout_width="30sp"
            android:layout_height="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="39"
            android:textSize="24dp"
            />

        <RadioButton
            android:id="@+id/co_3"
            android:layout_width="30sp"
            android:layout_height="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="41"
            android:textSize="24dp"
            />
    </RadioGroup>
    <Button
        android:id="@+id/them_gio_hang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="add to cart"
        />

</LinearLayout>